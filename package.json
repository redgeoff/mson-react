{
  "name": "mson-react",
  "version": "1.4.0",
  "description": "UI Rendering Layer for React and Material-UI",
  "author": "Geoff Cox",
  "license": "Apache-2.0",
  "main": "lib/bundle.js",
  "homepage": "https://redgeoff.github.io/mson-react",
  "peerDependencies": {
    "@date-io/date-fns": "^1.3.11",
    "@material-ui/core": "^4.4.3",
    "@material-ui/pickers": "^3.2.6",
    "date-fns": "^2.2.1",
    "mson": "^1.4.0",
    "prop-types": "^15.6.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0"
  },
  "dependencies": {
    "@material-ui/pickers": "^3.2.6",
    "@testing-library/jest-dom": "^5.0.0",
    "classnames": "^2.2.6",
    "lodash": "^4.17.15",
    "react-beautiful-dnd": "^11.0.5",
    "react-google-recaptcha": "^2.0.1",
    "react-markdown": "^4.2.2",
    "react-router-dom": "^5.0.1",
    "react-select": "^3.0.8",
    "react-text-mask": "^5.4.3",
    "text-mask-addons": "^3.8.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.0",
    "@babel/core": "^7.6.0",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-transform-runtime": "^7.6.0",
    "@babel/preset-react": "^7.0.0",
    "@date-io/date-fns": "^1.3.11",
    "@material-ui/core": "^4.4.3",
    "@testing-library/react": "^9.1.4",
    "babel-loader": "8.0.6",
    "copyfiles": "^2.1.1",
    "cross-env": "^6.0.0",
    "css-loader": "^3.2.0",
    "date-fns": "^2.2.1",
    "gh-pages": "^2.1.1",
    "husky": "^4.0.2",
    "lint-staged": "^10.0.3",
    "mson": "^1.4.0",
    "prettier": "^1.18.2",
    "prop-types": "^15.6.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-scripts": "^3.1.2",
    "style-loader": "^1.0.0",
    "typeface-roboto": "^0.0.75",
    "wait-on": "^4.0.0",
    "webpack-bundle-analyzer": "^3.5.1",
    "webpack-cli": "^3.3.9"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "scripts": {
    "lint": "eslint src",
    "test-server-start": "cross-env NODE_ENV=production ./node_modules/@babel/node/bin/babel-node.js ../mson-server/bin/test-server.js --port=4002 --prefix=mson_test_ --CORE_TEST &",
    "test-server-stop": "pkill -f --signal=SIGINT CORE_TEST & exit 0",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "just-test": "./scripts/test.sh",
    "test": "npm run lint && npm run just-test -- --coverage",
    "copy-json": "copyfiles -u 1 src/**/*.json lib",
    "copy-css": "copyfiles -u 1 src/**/*.css lib",
    "compile": "cross-env NODE_ENV=production babel src --ignore '**/*.test.js' -d lib && npm run copy-json && npm run copy-css",
    "bundle": "webpack",
    "touch": "find src -exec touch {} \\;",
    "analyze-bundle": "webpack --profile --json > ./dist/stats.json && webpack-bundle-analyzer ./dist/stats.json",
    "predeploy": "yarn build",
    "deploy": "gh-pages -d build"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!**/demo/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
