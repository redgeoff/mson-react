{
  "name": "mson-react",
  "version": "1.0.1",
  "description": "UI Rendering Layer for React and Material-UI",
  "author": "Geoff Cox",
  "license": "Apache-2.0",
  "peerDependencies": {
    "@material-ui/core": "^3.2.0",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "material-ui-pickers": "^1.0.0-rc.14"
  },
  "dependencies": {
    "country-telephone-data": "^0.5.5",
    "date-fns": "^2.0.0-alpha.16",
    "lodash": "^4.17.10",
    "mson": "^1.0.1",
    "react-google-recaptcha": "^1.0.0",
    "react-markdown": "^4.0.0",
    "react-router-dom": "^4.3.1",
    "react-select": "^2.1.0",
    "react-text-mask": "^5.4.3",
    "text-mask-addons": "^3.8.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.4",
    "css-loader": "^1.0.0",
    "husky": "^1.1.0",
    "lint-staged": "^7.2.2",
    "prettier": "^1.14.2",
    "react-scripts": "^2.0.3",
    "style-loader": "^0.23.1",
    "typeface-roboto": "^0.0.54",
    "wait-on": "^3.0.1",
    "webpack-bundle-analyzer": "^3.0.2",
    "webpack-cli": "^3.1.2"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "scripts": {
    "lint": "eslint src",
    "test-server-start": "NODE_ENV=production ./node_modules/@babel/node/bin/babel-node.js ../mson-server/bin/test-server.js --port=4002 --prefix=mson_test_ --CORE_TEST &",
    "test-server-stop": "pkill -f --signal=SIGINT CORE_TEST & exit 0",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "just-test": "./scripts/test.sh",
    "test": "npm run lint && npm run just-test -- --coverage",
    "copy-json-rsync": "rsync -avm --include='*.json' -f 'hide,! */' src/mson lib",
    "copy-json": "cd src && find . -name '*.json' -exec cp --parents \\{\\} ../lib \\;",
    "copy-css": "cd src && find . -name '*.css' -exec cp --parents \\{\\} ../lib \\;",
    "compile": "NODE_ENV=production babel src --ignore '**/*.test.js' -d lib && npm run copy-json && npm run copy-css",
    "bundle": "webpack",
    "touch": "find src -exec touch {} \\;",
    "analyze-bundle": "webpack --profile --json > ./dist/stats.json && webpack-bundle-analyzer ./dist/stats.json"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!**/demo/**",
      "!**/src/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
